<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vuk.vuk_sizebook.EditRecordActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/editNameText"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:focusable="false"
        android:ems="10"
        android:layout_below="@+id/editNameText"
        android:id="@+id/editDateText"
        android:layout_alignParentEnd="true"
        android:hint="@string/record_date"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/editDateText"
        android:id="@+id/editNeckText"
        android:layout_alignParentEnd="true"
        android:hint="@string/record_unit"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/editNeckText"
        android:id="@+id/editBustText"
        android:layout_alignParentEnd="true"
        android:hint="@string/record_unit"
        android:layout_toEndOf="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/editBustText"
        android:layout_alignEnd="@+id/editBustText"
        android:id="@+id/editChestText"
        android:hint="@string/record_unit"
        android:layout_toEndOf="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/editChestText"
        android:id="@+id/editWaistText"
        android:layout_alignParentEnd="true"
        android:hint="@string/record_unit"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/editWaistText"
        android:id="@+id/editHipText"
        android:layout_alignParentEnd="true"
        android:hint="@string/record_unit"
        android:layout_toEndOf="@+id/textView6" />

    <Button
        android:hint="@string/record_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSubmitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editInseamText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editInseamText"
        android:hint="@string/record_unit"
        android:layout_below="@+id/editHipText"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:text="@string/record_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editNameText"
        android:layout_above="@+id/editDateText"
        android:layout_alignParentTop="true"
        android:textSize="30sp" />

    <TextView
        android:text="@string/record_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:layout_toStartOf="@+id/editNameText"
        android:layout_above="@+id/editNeckText"
        android:textSize="30sp" />

    <TextView
        android:text="@string/record_neck1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/editDateText"
        android:layout_above="@+id/editBustText"
        android:textSize="30sp" />

    <TextView
        android:text="@string/record_bust1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:layout_above="@+id/editChestText"
        android:layout_toStartOf="@+id/editNeckText"
        android:textSize="30sp" />

    <TextView
        android:text="@string/record_chest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:layout_above="@+id/editWaistText"
        android:layout_toStartOf="@+id/editBustText"
        android:textSize="30sp" />

    <TextView
        android:text="@string/record_hip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8"
        android:layout_above="@+id/editInseamText"
        android:layout_toStartOf="@+id/editWaistText"
        android:textSize="30sp"
        android:layout_below="@+id/editWaistText" />

    <TextView
        android:text="@string/record_inseam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:id="@+id/textView9"
        android:layout_toStartOf="@+id/editHipText"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/editInseamText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editCommentText"
        android:hint="@string/record_comment"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/editInseamText" />

    <TextView
        android:text="@string/record_waist1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="30sp"
        android:layout_below="@+id/editChestText"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editChestText"
        android:layout_above="@+id/editHipText" />

</RelativeLayout>
